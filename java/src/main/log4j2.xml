<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">

			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} \t%enc{%m}{CRLF}%n" />
			<MarkerFilter marker="ADMIN" onMatch="NEUTRAL"
				onMismatch="NEUTRAL" />
			<MarkerFilter marker="NETTHREAD" onMatch="NEUTRAL"
				onMismatch="NEUTRAL" />
		</Console>

		<File name="File" fileName="app.log">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} \t%enc{%m}{CRLF}%n" />
		</File>

		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
		<RandomAccessFile name="RandomAccessFile"
			fileName="async.log" immediateFlush="false" append="false">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} \t%enc{%m}{CRLF}%n" />
		</RandomAccessFile>

	</Appenders>

	<Loggers>
		<Root level="info" includeLocation="false">
			<AppenderRef ref="RandomAccessFile" />
		</Root>
	</Loggers>
</Configuration>