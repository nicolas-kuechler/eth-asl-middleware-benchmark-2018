<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<CustomLevels>
		<CustomLevel name="STAT" intLevel="350" />
	</CustomLevels>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">

			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} \t%enc{%m}{CRLF}%n" />
			<MarkerFilter marker="ADMIN" onMatch="NEUTRAL"
				onMismatch="NEUTRAL" />
			<MarkerFilter marker="NETTHREAD" onMatch="NEUTRAL"
				onMismatch="NEUTRAL" />
		</Console>

		<File name="File" fileName="app.log">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [ t ] level %logger{36}
				- %msg%n" />
		</File>

	</Appenders>

	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>